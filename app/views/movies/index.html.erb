<h1>List of movies</h1>

<a href="http://localhost:3000/movies/new">Add a new movie</a>

<table>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
    <th>Description</th>
    <th>Image</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list.each do |item| %>
  <tr>

    <td>
      <%= item.title %>
    </td>
    <td>
      <%= item.year %>
    </td>
    <td>
      <%= item.duration %>
    </td>
    <td>
      <%= item.description %>
    </td>
    <td>
      <img src="<%= item.image_url %>" width="80">
    </td>
    <td>
      <a href="http://localhost:3000/movies/<%= item.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/movies/<%= item.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_movie/<%= item.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
