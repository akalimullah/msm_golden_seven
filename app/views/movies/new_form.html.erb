<h1>Add a new movie</h1>

<form action="http://localhost:3000/create_movie">
  <div>
    <label for="title">Title:</label>
    <input id="title" type="text" name="the_title">
  </div>
  <div>
    <label for="year">Year:</label>
    <input id="year" type="number" min="1890" max="2050" name="the_year">
  </div>
  <div>
    <label for="duration">Duration:</label>
    <input id="duration" type="number" min="0" max="10000" name="the_duration">
  </div>
  <div>
    <label for="description">Description:</label>
    <input id="description" type="text" name="the_description">
  </div>
  <div>
    <label for="image_url">Image URL:</label>
    <input id="image_url" type="text" name="the_image_url">
  </div>
  <div>
    <button>Create movie</button>
  </div>
</form>
