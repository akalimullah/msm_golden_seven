<h1>List of directors</h1>

<a href="http://localhost:3000/directors/new">Add a new director</a>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>DOB</th>
    <th>Image</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list.each do |item| %>
  <tr>

    <td>
      <%= item.name %>
    </td>
    <td>
      <%= item.bio %>
    </td>
    <td>
      <%= item.dob %>
    </td>
    <td>
      <img src="<%= item.image_url %>" width="80">
    </td>
    <td>
      <a href="http://localhost:3000/directors/<%= item.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/directors/<%= item.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/delete_director/<%= item.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
